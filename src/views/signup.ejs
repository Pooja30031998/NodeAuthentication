<div class="main-div">
  <div class="form-div">
    <h3 class="text-center title">Sign Up</h3>
    <br />

    <!-- if there is an error message show it alert box -->
    <% if (error) { %>
    <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <br />

    <!-- signup form -->
    <form action="/signup" method="post">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="name"
          class="form-control"
          id="name"
          placeholder="Enter your name"
          name="name"
          required
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder="name@example.com"
          name="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="mb-3">
        <label for="cpassword" class="form-label">Confirm Password</label>
        <input
          type="password"
          class="form-control"
          id="cpassword"
          name="cpassword"
          required
        />
      </div>
      <div class="mb-3">Recaptcha</div>
      <div class="d-grid gap-2 col-6 mx-auto">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </form>
    <hr />

    <!-- Already a user div -->
    <div class="row mt-3">
      <div class="col-md-12">
        <a
          class="inline-block align-baseline font-bold text-sm float-end msg-s"
          href="/"
        >
          Already a user? Login
        </a>
      </div>
    </div>
  </div>
</div>
