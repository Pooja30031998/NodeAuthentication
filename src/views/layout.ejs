<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Authentication</title>
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- css style -->
    <link rel="stylesheet" href="/style.css" />
    <!-- fontawesome -->
    <script
      src="https://kit.fontawesome.com/08de648d17.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar fixed-top navbar-dark bg-dark navbar-expand-lg">
      <div class="container-fluid">
        <% if(!locals.userEmail){ %>
        <a class="navbar-brand" href="/" style="color: orange"
          >Authentication</a
        >
        <% }else{ %>
        <a class="navbar-brand" href="/home" style="color: orange"
          >Authentication</a
        >
        <% } %>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <!-- protected page. only opens after signing in -->
            <li class="nav-item">
              <a class="nav-link active" href="/home">Home</a>
            </li>
            <!-- Reset password page (show up only after logging in) -->
            <% if(locals.userEmail){ %>
            <li class="nav-item">
              <a class="nav-link active" href="/reset">Reset Password</a>
            </li>
            <% } %>
          </ul>

          <ul class="nav justify-content-end">
            <!-- Signup page -->
            <% if(!locals.userEmail){ %>
            <li class="nav-item">
              <a class="nav-link active" href="/signup">
                <button class="btn btn-primary me-2" type="button">
                  Register
                </button></a
              >
            </li>
            <% } %>
            <!-- Logout page (show up only after logging in) -->
            <% if(locals.userEmail){ %>
            <li class="nav-item">
              <a class="nav-link active" href="/logout">
                <button class="btn btn-primary me-2" type="button">
                  Log Out
                </button></a
              >
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- body -->
    <div class="container align-items-center justify-content-center mt-5">
      <%-body%>
    </div>

    <!-- bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
